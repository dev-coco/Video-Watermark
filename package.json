{
  "name": "video-watermark-app",
  "version": "1.0.0",
  "description": "批量视频添加水印工具",
  "author": "Raz1ner",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --mac"
  },
  "build": {
    "appId": "com.Raz1ner.VideoWatermark",
    "productName": "视频加水印工具",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "identity": null,
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icon.ico"
    },
    "asarUnpack": [
      "fonts/**"
    ]
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.81",
    "ffmpeg-static": "latest",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "latest",
    "sharp": "latest"
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "latest"
  }
}